module  test_async   ( input  logic spawn, playbackground
                       input logic color,
                       output logic [3:0] blue_ctr, red_ctr
                     );


logic [3:0] bluectr
logic [3:0] redctr

assign bluectr = 1'd0;
assign redctr = 1'd0;

always_ff (

if (spawn == 1 && playbackround == 1)
begin
  if (color == 1'b0) // blue
  begin
    bluectr = bluectr + 1'd1;
  end

  else if (color == 1'b1) // red
  begin
    redctr = redctr + 1'd1;
  end

  else
  begin
    bluectr = bluectr;
    redctr = redctr;
  end

end

